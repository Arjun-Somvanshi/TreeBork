#: import RGBA kivy.utils.rgba 
#: import SlideTransition kivy.uix.screenmanager.SlideTransition
Screen_Manager:
    UserInput: 
    MainScreen:
    Assignment:
    CustomizeScreen:

<CustomTextInput@TextInput>:
    background_color: RGBA(app.theme['tile_label'])
    #size_hint_max_y: dp(50)
    foreground_color: RGBA(app.theme['secondary_color'])
    font_size: sp(16)
    size_hint_max_x: dp(400)
    write_tab: False
    multiline: False
<CustomButton@Button>:
    week: False
    background_color: RGBA(app.theme['tile_grid']) if self.week == True else RGBA(app.theme['button'])
    on_press: app.set_btn_col(0, self) if self.week != True else app.set_btn_col(2, self)
    on_release: app.set_btn_col(2, self) if self.week == True else app.set_btn_col(1, self)
    background_normal: ''
    background_down: ''
    size_hint_max_y: dp(60)
    #size_hint_max_x: dp(200)
    color: RGBA(app.theme['secondary_color'])
    font_size: sp(17)
<SubjectButton>:
    week: False
    background_color: RGBA(app.theme['tile_grid']) if self.week == True else RGBA(app.theme['button'])
    on_press: app.set_btn_col(0, self) if self.week != True else app.set_btn_col(2, self)
    on_release: app.set_btn_col(2, self) if self.week == True else app.set_btn_col(1, self)
    background_normal: ''
    background_down: ''
    size_hint_max_y: dp(60)
    color: RGBA(app.theme['secondary_color'])
    font_size: sp(17)
<SlotButton>:
    canvas.before:
        Color:
            rgba: RGBA(app.theme['tile_background'])
        RoundedRectangle:
            size: self.width + dp(15), self.height + dp(15)
            pos: self.x - dp(7.5), self.y - dp(7.5)
    background_color: RGBA(app.theme['button']) if self.state == 'normal' else RGBA(app.theme['buttondown'])
    color: RGBA(app.theme['main_fonts'])
    background_normal: ''
    background_down: ''
    font_size: sp(17)
    text: root.slot_text
<CustomModalView>:
    overlay_color: (1,1,1,0)

<HeadingLabel@Label>:
    canvas.before:
        Color:
            rgba:RGBA(app.theme['tile_grid'])
        RoundedRectangle:
            size: self.size
            pos: self.pos
    font_name: 'Fonts/title'
    size_hint_y: None
    size_hint_x: None
    pos_hint: {'center_x': 0.5}
    halign: 'center'  
    color: RGBA(app.theme['main_fonts'])
    width: self.texture_size[0]
    height: self.texture_size[1] + dp(50)
    font_size: root.width/22 if root.width/22 <= sp(25) else sp(25)

<TileLabel@Label>:
    canvas.before:
        Color:
            rgba: RGBA(app.theme['tile_label'])
        RoundedRectangle:
            size: self.size
            pos: self.pos
            radius: dp(10),dp(10),dp(10),dp(10)
    color: RGBA(app.theme['secondary_color'])
    markup: True

<CalanderDrop@UIDropDown>:
    color: app.theme['secondary_color']
    color: app.theme['secondary_color']
    background_color: RGBA(app.theme['button']) if self.state == 'down' else RGBA(app.theme['buttondown'])
    background_normal: ''
    background_down: ''
    dd_background_color: RGBA(app.theme['tile_background'])
    dd_item_color: [RGBA(app.theme['button']), RGBA(app.theme['buttondown'])]
    dd_item_font_color: RGBA(app.theme['secondary_color'])  
    dd_open_vertical: 'down'
    dd_width: self.width + dp(20)
    dd_item_font_size: sp(16)
    calculate_ddheight: True
    show_items: 5 

<Tile>:
    canvas.before:
        Color:
            rgba:RGBA(app.theme['tile_background'])
        RoundedRectangle:
            size: self.size
            pos: self.pos
            radius: dp(5),dp(5),dp(5),dp(5)
    cols: 1
    spacing: dp(5)
    size_hint_min_x: dp(200)
    padding: dp(10)
    TileLabel:
        id: subject
        text: '[b]' + root.subject_name + '[/b]'
        color: RGBA(app.theme['main_fonts'])
        shorten: True
        shorten_from: 'right'
        text_size: self.width - dp(5), None
        halign: 'center'
    TileLabel:
        id: time
        text: root.time
    BoxLayout:
        spacing: dp(5)
        TileLabel:
            id: slot
            text: root.slot
            shorten_from: 'right'
            text_size: self.width - dp(5), None
            halign: 'center'
        TileLabel:
            id: sub_code
            text: root.subject_code 
    TileLabel:
        id: academic_block
        text: root.academic_block
        shorten_from: 'right'
        text_size: self.width - dp(5), None
        halign: 'center'

<QuickMessage>:
    canvas.before:
        Color:
            rgba: RGBA(app.theme['tile_background'])
        Rectangle:
            size: self.size
            pos: self.pos
    orientation: 'vertical'
    padding: dp(10)
    spacing: dp(15)
    TileLabel:
        id: title
        size_hint_y: None
        height: dp(30)
        disabled_color: self.color
        color: RGBA(app.theme['main_fonts'])
    ScrollView:
        do_scroll_x: False
        do_scroll_y: True
        scroll_type: ['content', 'bars']
        bar_width: 5
        bar_color:RGBA(app.theme['tile_grid'])
        TileLabel:
            id: message
            padding: dp(10), dp(10)
            height: self.texture_size[1]
            text_size: self.width,None
            disabled_color: self.color
            width: root.width - root.width/11
            #halign: 'center'
            color: RGBA(app.theme['secondary_color'])
            line_height: 1.5
            size_hint: None, None
            font_size: sp(16)
    BoxLayout:
        size_hint_y: None
        height: dp(40)
        size_hint_x: 0.5
        pos_hint: {'right': 1}
        CustomButton:
            id: close
            disabled_color: self.color
            background_disabled_normal: self.background_normal
            background_color: RGBA(app.theme['tile_label'])
            text: 'Okay'

<QuickWarning>:
    canvas.before:
        Color:
            rgba: RGBA(app.theme['tile_background'])
        Rectangle:
            size: self.size
            pos: self.pos
    orientation: 'vertical'
    padding: dp(10)
    spacing: dp(15)
    TileLabel:
        id: title
        size_hint_y: None
        height: dp(30)
        disabled_color: self.color
        color: RGBA(app.theme['main_fonts'])
    ScrollView:
        do_scroll_x: False
        do_scroll_y: True
        scroll_type: ['content', 'bars']
        bar_width: 5
        bar_color:RGBA(app.theme['tile_grid'])
        TileLabel:
            id: message
            padding: dp(10), dp(10)
            height: self.texture_size[1]
            text_size: self.width,None
            disabled_color: self.color
            width: root.width - root.width/11
            #halign: 'center'
            color: RGBA(app.theme['secondary_color'])
            line_height: 1.5
            size_hint: None, None
            font_size: sp(16)
    BoxLayout:
        size_hint_y: None
        height: dp(40)
        pos_hint: {'center': 0.5}
        spacing: dp(10)
        CustomButton:
            id: no 
            disabled_color: self.color
            background_disabled_normal: self.background_normal
            background_color: RGBA(app.theme['tile_label'])
            text: 'No'
        CustomButton:
            id: yes 
            disabled_color: self.color
            background_disabled_normal: self.background_normal
            background_color: RGBA(app.theme['tile_label'])
            text: 'Yes'

<UserInput>:
    name: 'UserInput'
    Screen_Manager:
        id: user_input_sc_manager
        Screen:
            name: "schedule_setter"
            BoxLayout:
                orientation: 'vertical'
                padding: 0, dp(20), 0, 0
                HeadingLabel:
                    id: title_question
                    text: 'Are you wanting to make a schedule for VIT or another Institute?'
                    text_size: root.width - dp(30), None
                BoxLayout:
                    padding: dp(50)
                    orientation: 'vertical'
                    BoxLayout:
                        orientation: 'vertical' # this boxlayout is just for the looks, it doesn't do anything, just that tile color
                        padding: dp(20)
                        spacing: dp(20)
                        canvas.before:
                            Color:
                                rgba:RGBA(app.theme['tile_grid'])
                            Rectangle:
                                size: self.size
                                pos: self.pos
                        BoxLayout:
                            orientation: 'vertical'
                            size_hint_y: 0.6
                            size_hint_max_y: dp(250)
                            pos_hint: {'center_y':0.5}
                            BoxLayout:
                                spacing: dp(8)
                                padding: dp(10)
                                CheckBox:
                                    id: vit
                                    active: not other.active 
                                    enabled: self.active
                                    color: RGBA(app.theme['main_fonts'])
                                TileLabel:
                                    text: "VIT"
                                    font_size: sp(22)
                        
                            BoxLayout:
                                spacing: dp(8)
                                padding: dp(10)
                                CheckBox:
                                    id: other
                                    active: not vit.active 
                                    enabled: self.active
                                    color: RGBA(app.theme['main_fonts'])
                                TileLabel:
                                    text: "Other"
                                    font_size: sp(22)
                        Widget:  
                            size_hint_y: 0.2
                            
                        CustomButton:
                            text: 'Submit'
                            size_hint_y: 0.2
                            size_hint_max_y: dp(40)
                            size_hint_x: 0.5
                            pos_hint: {'center_x': 0.5}           
                            on_release: root.set_schedule_type()
        Screen:
            name: 'AddSubject'
            BoxLayout:
                orientation: 'vertical'
                padding: dp(20)
                spacing: dp(10)
                HeadingLabel:
                    id: title_add
                    text: 'Enter The Subject Details' 
                    text_size: root.width - dp(30), None
                Label:
                    id: success
                    text: ''
                    size_hint_y: None
                    height: dp(40)
                    font_size: dp(15)
                    text_size: (self.width - dp(40), None)
                    color: RGBA(app.theme['main_fonts'])
                    halign: 'center'
                BoxLayout:
                    orientation: 'vertical'
                    spacing: dp(10)
                    padding: dp(20)
                    CustomTextInput:
                        id: subject_name
                        hint_text: 'Subject Name'
                        size_hint_y: None
                        height: dp(44)
                    CustomTextInput:
                        id: sub_code
                        hint_text: 'Subject Code'
                        size_hint_y: None
                        height: dp(45)
                    Widget:
                        size_hint_y: None
                        height: dp(10)
                    BoxLayout:
                        size_hint_max_y: dp(50)
                        Widget:
                        CheckBox:
                            id: theory
                            active: not lab.active
                            enabled: self.active
                            color: RGBA(app.theme['main_fonts'])
                            size_hint_x: None
                            width: dp(40)
                        Label:
                            id: t_label
                            text: 'Theory'
                            font_size: sp(17)
                            color: RGBA(app.theme['main_fonts'])
                            size_hint_x: None
                            width: self.texture_size[0] + dp(20)
                        Widget:
                    Widget:
                        size_hint_y: None
                        height: dp(10)
                    BoxLayout:
                        size_hint_max_y: dp(50)
                        Widget:
                        CheckBox:
                            id: lab
                            active: not theory.active
                            enabled: self.active
                            color: RGBA(app.theme['main_fonts'])
                            size_hint_x: None
                            width: dp(40)
                        Label:
                            text: 'Lab'
                            font_size: sp(17)
                            color: RGBA(app.theme['main_fonts'])
                            size_hint_x: None
                            width: t_label.texture_size[0] + dp(20)
                        Widget:
                    Widget:
                        size_hint_y: None
                        height: dp(10)
                    CustomTextInput:
                        id: venue
                        hint_text: 'Academic Building'
                        size_hint_y: None
                        height: dp(44)
                    Widget:
                BoxLayout:
                    orientation: 'vertical'
                    BoxLayout:
                        size_hint_y: None
                        height: dp(50)
                        padding: dp(5)
                        Widget:
                            size_hint_x: 0.1
                        CustomButton:
                            size_hint_max_x: dp(450)
                            text: 'Back'
                            on_release:
                                app.root.transition = SlideTransition(direction = 'left')
                                app.root.current = 'main'
                                root.refresh()
                        Widget:
                            size_hint_x: None
                            width: dp(50)
                        CustomButton:
                            size_hint_max_x: dp(450)
                            text: 'Next'
                            on_release: root.next()
                        Widget:
                            size_hint_x: 0.1
        
        Screen:
            name: 'SlotScreen'
            id: slot_screen
            BoxLayout:
                orientation: 'vertical'
                spacing: root.height/10
                padding: dp(20)
                BoxLayout:
                    orientation: 'vertical'
                    spacing: dp(30)
                    HeadingLabel:
                        text: "Choose the Subject's Slots"
                        text_size: root.width - dp(30), None
                    BoxLayout:
                        orientation: 'vertical'
                        spacing: dp(10)
                        size_hint_y: None
                        height: self.minimum_height
                        BoxLayout:
                            orientation: 'vertical'
                            spacing: dp(15)
                            size_hint_y: None
                            height: self.minimum_height
                            BoxLayout:
                                size_hint_y: None
                                height: dp(60)
                                padding: dp(30), 0
                                Label:
                                    text: 'Chosen Slot is:'
                                    color: RGBA(app.theme['main_fonts'])
                                    font_size: sp(18)
                                Widget:
                                    size_hint_x: None
                                    width: dp(15)
                                TileLabel:
                                    id: chosen_slot
                                    text: 'Example: A1+TA1 or L3+L4'
                                    padding: dp(5), 0
                                    text_size: self.width, None
                                    halign: 'center'
                        BoxLayout:
                            size_hint_y: None
                            height: self.minimum_height
                            padding: dp(25), 0
                            Widget:
                            CustomButton:
                                text: 'Clear'
                                size_hint_max_x: dp(450)
                                size_hint_y: None
                                height: dp(30)
                                on_release: root.clear()
                            Widget:
                                size_hint_x: None
                                width: dp(20)
                            CustomButton:
                                text: 'Clear All'
                                size_hint_max_x: dp(450)
                                size_hint_y: None
                                height: dp(30)
                                on_release: root.clear_all()
                            Widget:
                    BoxLayout:
                        padding: dp(25)
                        canvas.before:
                            Color:
                                rgba:RGBA(app.theme['tile_background'])
                            Rectangle:
                                size: self.size
                                pos: self.pos
                        RecycleView:
                            id: rv
                            viewclass: 'SlotButton'
                            data: root.slot_data
                            RecycleGridLayout:
                                canvas.before:
                                    Color:
                                        rgba: RGBA(app.theme['tile_grid'])
                                    Rectangle:
                                        size: self.size
                                        pos: self.pos
                                cols: 5
                                padding: dp(20)
                                spacing: dp(30)
                                size_hint: 1, None
                                #width: self.minimum_width
                                default_size: None, dp(60)
                                default_size_hint: 1, None
                                height: self.minimum_height
                    BoxLayout:
                        size_hint_y: None
                        height: dp(50)
                        padding: dp(5)
                        Widget:
                            size_hint_x: 0.1
                        CustomButton:
                            size_hint_max_x: dp(450)
                            text: 'Back'
                            on_release: 
                                slot_screen.manager.transition = SlideTransition(direction = 'right')
                                slot_screen.manager.current = 'AddSubject'
                        Widget:
                            size_hint_x: None
                            height: dp(50)
                        CustomButton:
                            size_hint_max_x: dp(450)
                            text: 'Add'
                            on_release: root.add_subject()
                        Widget:
                            size_hint_x: 0.1
                    
                
<MainScreen>:
    name: 'main'
    BoxLayout:
        orientation: 'vertical'
        padding: dp(10)
        spacing: dp(20)
        BoxLayout:
            canvas.before:
                Color:
                    rgba: RGBA(app.theme['tile_grid'])
                Rectangle:
                    size: self.size
                    pos: self.pos
            orientation: 'vertical'
            size_hint_y: None
            height: dp(100)
            padding: dp(20)
            spacing: dp(10)
            Label:
                font_size: dp(25)
                font_name: 'Fonts/title.ttf'
                text: 'TreeBork'
                color: RGBA(app.theme['main_fonts'])
            Label:
                canvas.before:
                    Color:
                        rgba:RGBA(app.theme['tile_label'])
                    RoundedRectangle:
                        size: self.size
                        pos: self.pos
                        radius: dp(5),dp(5),dp(5),dp(5)
                size_hint_x: None
                width: self.texture_size[0] + self.texture_size[0]*0.1
                pos_hint: {'center_x': 0.5}
                text: app.time
                font_size: dp(20)
                color: RGBA(app.theme['secondary_color'])
        BoxLayout:
            canvas.before:
                Color:
                    rgba:RGBA(app.theme['tile_grid'])
                Rectangle:
                    size: self.size
                    pos: self.pos
            size_hint_x: 0.9 if app.plat == 'android' else 0.7
            size_hint_min_x: dp(200)
            size_hint_max_x: dp(400)
            pos_hint: {'center_x': 0.5}
            orientation: 'vertical'
            BoxLayout:
                size_hint_y: None
                height: dp(30) 
                spacing: dp(5)
                id: weekbar
                CustomButton:
                    font_size: sp(14)
                    text: 'Mon'
                    on_release:
                        root.show_day(self.text)               
                CustomButton:
                    font_size: sp(14)
                    text: 'Tue'
                    on_release:
                        root.show_day(self.text)              
                CustomButton:
                    font_size: sp(14)
                    text: 'Wed'
                    on_release:
                        root.show_day(self.text)               
                CustomButton:
                    font_size: sp(14)
                    text: 'Thu'
                    on_release:
                        root.show_day(self.text)               
                CustomButton:
                    font_size: sp(14)
                    text: 'Fri'
                    on_release:
                        root.show_day(self.text)               
                CustomButton:
                    font_size: sp(14)
                    text: 'Sat'
                    on_release:
                        root.show_day(self.text)               
                CustomButton:
                    font_size: sp(14)
                    text: 'Sun'
                    on_release:
                        root.show_day(self.text)               
            RecycleView:
                data: root.data
                viewclass: 'Tile'
                RecycleGridLayout:
                    canvas.before:
                        Color:
                            rgba:RGBA(app.theme['tile_grid'])
                        Rectangle:
                            size: self.size
                            pos: self.pos
                    spacing: dp(20)
                    default_size: None, dp(150)
                    default_size_hint: 0.5, None
                    cols: 1
                    padding: dp(10)
                    size_hint: 1, None
                    height: self.minimum_height
        BoxLayout:
            canvas.before:
                Color:
                    rgba:RGBA(app.theme['tile_grid'])
                Rectangle:
                    size: self.size
                    pos: self.pos
            size_hint_y: None
            height: dp(50)
            padding: dp(10)
            spacing: dp(50)
            UIDropDown:
                id: dropdown
                elements: ['Subject', 'Assignment']
                default_item: 'Add'
                color: app.theme['secondary_color']
                background_color: RGBA(app.theme['button']) if self.state == 'down' else RGBA(app.theme['buttondown'])
                background_normal: ''
                background_down: ''
                dd_background_color: RGBA(app.theme['tile_background'])
                dd_item_color: [RGBA(app.theme['button']), RGBA(app.theme['buttondown'])]
                dd_item_font_color: RGBA(app.theme['secondary_color'])  
                dd_open_vertical: 'up'
                dd_width: self.width + dp(20)
                dd_item_font_size: sp(13)
                on_set: root.add_subject_or_assignment()
                calculate_ddheight: True
                show_items: 2
            CustomButton:
                id: weekly
                font_size: sp(14)
                text: 'Theme Switch'
                on_release: app.theme_switch()
            CustomButton:
                id: settings
                text: 'Remove'
                on_release:
                    app.root.transition = SlideTransition(direction='left')
                    app.root.current = 'customizescreen'
<CustomizeScreen>:
    name: 'customizescreen'
    ScreenManager:
        id: customscreen_manager
        Screen:
            name: 'viewscreen'
            BoxLayout:
                padding: dp(10)
                spacing: dp(20)
                orientation: 'vertical'
                HeadingLabel:
                    id: title_add
                    text: 'Remove Subjects' 
                    text_size: root.width - dp(30), None
                BoxLayout:
                    RecycleView:
                        viewclass: 'SubjectButton'
                        data: root.subject_list
                        RecycleBoxLayout:
                            orientation: 'vertical'
                            default_size_hint: (1, None)
                            default_size: (None, dp(60))
                            padding: dp(20)
                            spacing: dp(10)
                            size_hint_y: None
                            height: self.minimum_height
                BoxLayout:
                    size_hint_y: None
                    height: dp(50)
                    padding: dp(5)
                    Widget:
                    CustomButton:
                        size_hint_max_x: dp(300)
                        text: 'Back'
                        on_release:
                            root.back()
                    Widget:
<Assignment>:
    name: 'AssignmentScreen'
    BoxLayout:
        orientation: 'vertical'
        padding: dp(10)
        spacing: dp(20)
        HeadingLabel:
            text: 'Add Assignment'
            text_size: root.width - dp(30), None
        CustomButton:
            text: 'View Assignments'
            font_size: dp(15)
            size_hint_x: 0.33
            size_hint_y: None
            height: dp(40)
            pos_hint: {'center_x': 0.5}
        BoxLayout:
            padding: dp(20)
            spacing: dp(10)
            orientation: 'vertical'
            CustomTextInput:
                pos_hint: {'center_x': 0.5}
                size_hint_y: None
                height: dp(45)
                hint_text: 'Assignment Name (DA 1)'
            CustomTextInput:
                pos_hint: {'center_x': 0.5}
                size_hint_y: None
                height: dp(45)
                hint_text: 'Subject Name'
            BoxLayout:
                size_hint_y: None
                height: dp(40)
                spacing: dp(10)
                CalanderDrop:
                    id: day_drop
                    default_item: 'Day'
                CalanderDrop:
                    id: month_drop
                    default_item: 'Month'
                CalanderDrop:
                    id: year_drop
                    default_item: 'Year'
                    show_items: 4
            Widget:
            BoxLayout:
                size_hint_y: None
                height: dp(50)
                padding: dp(5)
                CustomButton:
                    size_hint_max_x: dp(200)
                    text: 'Back'
                    on_release:
                        root.back()
                Widget:
                CustomButton:
                    size_hint_max_x: dp(200)
                    text: 'Add'
                    on_release:
                        root.back()



